<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/public/vendor/styles/addExperience.css">
<title><%= user.name.split(' ')[0] %> : Experience</title>
</head>

<body>

    <!-- navbar -->
    <%- include('../includes/navbar.ejs')  %>


    <!-- Add Experience -->
    <div class="section add-experience">
        <div class="container">
            <div class="row">
                <div class="col-md-8 m-auto">
                    <a href="/dev/dashboard" class="badge btn-warning">
                        Go Back
                    </a>
                    <h1 class="display-4 text-center btn btn-info header">Add Your Experience</h1>
                    <p class="lead text-center">Add any developer/programming positions that you have had in the past</p>
                    <small class="d-block pb-3">* = required field</small>
                    <%- include('./includes/exp_messages.ejs') %>
                    <form action="/dev/experience" method="POST">
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="* Job Title"
                                name="title"

                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="* Company"
                                name="company"

                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="Location"
                                name="location"
                                />
                        </div>
                            <h6>From Date</h6>
                        <div class="form-group">
                            <input
                                type="date"
                                class="form-control form-control-lg"
                                name="from"
                            />
                        </div>
                            <h6>To Date</h6>
                        <div class="form-group">
                            <input
                                type="date"
                                class="form-control form-control-lg"
                                name="to"
                            />
                        </div>
                        <div class="form-check mb-4">
                            <input
                                class="form-check-input"
                                type="checkbox"
                                name="current"
                                value=""
                                id="current"
                            />
                            <label class="form-check-label" for="current">
                                Current Job
                            </label>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control form-control-lg" placeholder="Job Description" name="description"></textarea>
                            <small class="form-text text-muted">Some of your responsibilities, etc</small>
                        </div>
                        <input type="submit" class="btn btn-outline-info btn-block mt-4" value="submit"/>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- <script src="/public/vendor/scripts/experience.js"></script> -->
    <%- include('../includes/footer.ejs') %>