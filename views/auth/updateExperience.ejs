<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/public/vendor/styles/updatexperience.css">
<title> <%= user.name.split(' ')[0] %> : Experience </title>
</head>

<body>


    <!-- the navbar -->
    <%- include('../includes/navbar.ejs') %>

    <!-- experience -->
    <div class="section add-experience">
        <div class="container">
            <div class="row">
                <div class="col-md-8 m-auto">
                    <a href="/dev/dashboard" class="btn btn-light">
                        Go Back
                    </a>
                    <h1 class="display-4 text-center btn badge-success updateText">Update Your Experience</h1>
                    <small class="d-block pb-3">* = required field</small>
                    <%- include('./includes/exp_messages.ejs') %>
                    <form action="/dev/experience/update/<%= experience.id %> " method="POST">
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="* Job Title"
                                name="title"
                                value="<%= experience.title %>"
                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="* Company"
                                name="company"
                                value="<%= experience.company %>"
                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control form-control-lg"
                                placeholder="Location"
                                name="location"
                                value="<%= experience.location%>"
                            />
                        </div>
                            <h6>From Date</h6>
                        <div class="form-group">
                            <input
                                type="date"
                                class="form-control form-control-lg"
                                name="from"
                                value="<%= experience.from%>"
                            />
                        </div>
                            <h6>To Date</h6>
                        <div class="form-group">
                            <input
                                type="date"
                                class="form-control form-control-lg"
                                name="to"
                                value="<%= experience.to%>"
                            />
                        </div>
                        <div class="form-check mb-4">
                            <input
                                class="form-check-input"
                                type="checkbox"
                                name="current"
                                value=""
                                id="current"
                            />
                            <label class="form-check-label" for="current">
                                Current Job
                            </label>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control form-control-lg" placeholder="Job Description" name="description">
                                <%= experience.description%>
                            </textarea>
                            <small class="form-text text-muted">Some of your responsibilities, etc</small>
                        </div>
                        <input type="submit" class="btn btn-outline-success btn-block mt-4" value="update"/>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <%- include('../includes/footer.ejs') %>