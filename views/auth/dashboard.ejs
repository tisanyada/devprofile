<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/public/vendor/styles/dashboard.css">
<title> <%= user.name.split(' ')[0] %> : Dashboard </title>
</head>

<body>


    <!-- the navbar -->
    <%- include('../includes/navbar.ejs') %>
    <!-- Dashboard -->
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- <h1 class="display-4">Dashboard</h1> -->
                    <p class="lead mb-5 btn btn-success">Welcome <%= user.name %> </p>
                    <!-- Dashboard Actions -->
                    <div class="btn-group mb-5 offset-4" role="group">
                        <% if (profileExist) { %>
                            <a href="/dev/profile/update" class="btn btn-light">
                                <i class="fa fa-user-alt text-info mr-1"></i>
                                Update Profile
                            </a>
                        <% } else { %>
                            <a href="/dev/profile" class="btn btn-light">
                                <i class="fa fa-user-alt text-info mr-1"></i>
                                Edit Profile
                            </a>
                        <% } %>
                        <a href="/dev/experience" class="btn btn-light">
                            <i class="fa fa-pen-fancy text-info mr-1"></i>
                            Add Experience
                        </a>
                        <a href="/dev/education" class="btn btn-light">
                            <i class="fas fa-graduation-cap text-info mr-1"></i>
                            Add Education
                        </a>
                    </div>


                    <!-- experience -->
                    <!-- Experience -->
                    <div class="experience-details">
                        <%- include('./includes/dashboard_messages.ejs')%>
                        <h4 class="mb-2">Experience Credentials</h4>
                        <table class="table experience-table">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Title</th>
                                    <th>Years</th>
                                    <th />
                                </tr>
                            </thead>
                            <tbody>
                                <% if(experience !== 'undefined'){ %>
                                    <% experience.forEach((data, index)=>{ %>
                                    <tr>
                                        <td> <%= data.title %> </td>
                                        <td> <%= data.company %> </td>
                                        <td>
                                            <%=
                                                data.from.toDateString()
                                            %>
                                                -
                                            <%=
                                                data.to ? data.to.toDateString() : 'Current'
                                            %>
                                        </td>
                                        <td>
                                            <a
                                                style=" margin-left: 30em;"
                                                href="/dev/experience/update/<%= data.id %>"
                                                class="btn btn-outline-warning"
                                            >
                                                <i class="fa fa-pen-alt" style="font-size: 20px;"></i>
                                            </a>
                                            <a
                                                href="/dev/experience/<%= data.id %>"
                                                class="btn btn-outline-danger"
                                                onclick='return confirm("Are you sure you want to delete this item")'
                                            >
                                                <i class="fa fa-trash" style="font-size: 20px;"></i>
                                            </a>
                                        </td>
                                        <!--  -->
                                    </tr>
                                    <% }) %>
                                <% } else{ %>
                                    no data found
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-5"></div>
                    <div class="education-details">
                        <!-- education -->
                        <h4 class="mb-2">Education Credentials</h4>
                        <table class="table education-table">
                            <thead>
                                <tr>
                                    <th>Institution/School</th>
                                    <th>Degree</th>
                                    <th>Years</th>
                                    <th />
                                </tr>
                            </thead>
                            <tbody>
                                <% if(education !== 'undefined'){ %>
                                    <% education.forEach((data, index)=>{ %>
                                    <tr>
                                        <td> <%= data.school %> </td>
                                        <td> <%= data.degree %> </td>
                                        <td> <%= data.from.toDateString() %> - <%= data.to ? data.to.toDateString() : 'Current' %>  </td>
                                        <td>
                                            <a
                                                style=" margin-left: 24em;"
                                                href="/dev/education/update/<%= data.id %>"
                                                class="btn btn-outline-warning"
                                            >
                                                <i class="fa fa-pen-alt" style="font-size: 20px;"></i>
                                            </a>
                                            <a
                                                href="/dev/education/<%= data.id %>"
                                                class="btn btn-outline-danger"
                                                onclick='return confirm("Are you sure you want to delete this item")'
                                            >
                                                <i class="fa fa-trash" style="font-size: 20px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% } else{ %>
                                    no data found
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>


        <%- include('../includes/footer.ejs') %>