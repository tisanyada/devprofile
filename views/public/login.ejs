<%- include('../includes/header.ejs') %>
</head>

<body>

    <!-- navbar -->
    <%- include('../includes/navbar.ejs')  %>


    <!-- Login -->
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-md-8 m-auto">
                <h1 class="display-4 text-center btn badge-info">Log In</h1>
                <p class="lead text-center">Sign in to your DevProfile account</p>
                <%- include('./includes/login_messages.ejs') %>
                <form action="/api/users/login" method="POST">
                    <div class="form-group">
                        <input
                            type="email"
                            class="form-control form-control-lg"
                            placeholder="Email Address"
                            name="email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <input
                            type="password"
                            class="form-control form-control-lg"
                            placeholder="Password"
                            name="password"
                            value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                    </div>
                    <input type="submit" class="btn btn-info btn-block mt-4" value="Login"/>
                </form>
                </div>
            </div>
        </div>
    </div>


    <%- include('../includes/footer.ejs') %>